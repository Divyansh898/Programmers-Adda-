@{
    ViewBag.Title = "Enquiry";
    Layout = "~/Views/Shared/GenralMaster.cshtml";
}

<form action="/Home/Enquiry" method="post">
<div class="row">
    <div class="col-sm-3"></div>
     <div class="col-sm-6" style="min-height:500px;margin-top:30px;
border:4px solid #0f68a9;background:linear-gradient(#0f68a9,skyblue);border-radius:10px;">
         <div class="row" style="background:#0f68a9;color:white;font-size:40px;
               text-align:center;font-family:'Imprint MT Shadow'">Enquiry  Form </div>
         <br />
       <span style="font-family:'Imprint MT Shadow';font-size:15px;">  Name</span> <br />
         <input type="text" name="name" class="form-control"
              placeholder="Enter Name" required="required" /><br />
        <span style="font-family:'Imprint MT Shadow';font-size:15px;"> Email Address </span><br />
         <input type="email" name="email" class="form-control"
              placeholder="Enter Email Address" required="required" /><br />
         <span style="font-family:'Imprint MT Shadow';font-size:15px;"> Mobile Number </span><br />
         <input type="number" name="mob" class="form-control"
             placeholder="Enter Mobile Number " required="required" /><br />
        <span style="font-family:'Imprint MT Shadow';font-size:12px;"> Message </span><br />
         <input type="text" name="msg" style="height:80px" class="form-control"
             placeholder="Type Message"  required="required"/> <br /><br />
         <center>
         <input type="submit" value="Enquiry Now" class="btn btn-danger" style="border-radius:20px;"/></center>
         <br /><br />

     </div>
     <div class="col-sm-3"></div>
</div>
<br /><br />
    </form>
