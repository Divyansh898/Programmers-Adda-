@{
    ViewBag.Title = "UploadQuery";
    Layout = "~/Views/Shared/GenralMaster.cshtml";
}

<form action="/Home/UploadQuery" method="post" enctype="multipart/form-data">
<div class="row" >
    <div class="col-sm-12" >
    <div class="col-sm-3"></div>
     <div class="col-sm-6" style="min-height:500px;margin-top:30px;margin-bottom:30px;
border:4px solid #0f68a9;background:linear-gradient(pink,skyblue);border-radius:10px">
         <div class="row" style="background:#0f68a9;color:white;font-size:40px;
               text-align:center;font-family:'Imprint MT Shadow';">Upload Query </div>
         <br />
       <center><span class="fa fa-question-circle" style="font-size:90px;padding:20px;
             background:#0f68a9;border-radius:50%;color:white"></span></center>  
         <br />
       <span style="font-family:'Imprint MT Shadow';font-size:15px;"> Name</span> <br />
         <input type="text" name="name" class="form-control"
              placeholder="Enter Name" required="required" /><br />
     <span style="font-family:'Imprint MT Shadow';font-size:15px;">  Query </span><br />
         <input type="file" name="query" class="form-control"
             required="required"/><br />
         <span style="font-family:'Imprint MT Shadow';font-size:15px;"> Comment</span> <br />
         <input type="text" name="comments" style="min-height:60px" class="form-control"
             required="required" placeholder="Comment here"/><br />
       
          <br />
         <center>
         <input type="submit" value="Upload Now" class="btn btn-danger" style="border-radius:20px;"/>
         <br /><br /></center>

     </div>
     <div class="col-sm-3"></div> <br /><br />
</div></div>

    </form>
